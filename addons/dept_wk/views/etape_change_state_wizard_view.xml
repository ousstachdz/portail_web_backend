<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         


        <record id="wk_state_changer_wizard_form" model="ir.ui.view">
            <field name="name">wk.state.changer.form</field>
            <field name="model">wk.state.changer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="state"/>
                        </group>
                        <footer>
                            <button name="change_state" string="Confirmer" type="object" class="oe_highlight"/>
                            <button string="Annuler" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        

         <record id="wk_state_changer_action_window" model="ir.actions.act_window">
            <field name="name">confirmation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wk.state.changer</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        



      

    

    </data>
</odoo>
